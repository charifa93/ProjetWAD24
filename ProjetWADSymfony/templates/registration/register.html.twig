{#  bootstrap  #}

<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <!-- Display form errors -->
              {{ form_errors(registrationForm) }}

              <!-- Start of the form -->
              {{ form_start(registrationForm) }}

              <!-- Name field -->
              <div data-mdb-input-init class="form-outline mb-4">
                {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control form-control-lg'}}) }}
                <label class="form-label" for="form3Example1cg">Your Name</label>
              </div>

              <!-- Surname field -->
              <div data-mdb-input-init class="form-outline mb-4">
                {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control form-control-lg'}}) }}
                <label class="form-label" for="form3Example1cg">Your Surname</label>
              </div>

              <!-- Email field -->
              <div data-mdb-input-init class="form-outline mb-4">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                <label class="form-label" for="form3Example3cg">Your Email</label>
              </div>

              <!-- Password field -->
              <div data-mdb-input-init class="form-outline mb-4">
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-lg'}, 'label': 'Password'}) }}
                <label class="form-label" for="form3Example4cg">Password</label>
              </div>

             

              <!-- Submit button -->
              <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
              </div>

              <p class="text-center text-muted mt-5 mb-0">Already have an account? <a href="#!" class="fw-bold text-body"><u>Login here</u></a></p>

              <!-- End of the form -->
              {{ form_end(registrationForm) }}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



     
        
