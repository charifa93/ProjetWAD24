{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>



    <table class="table">
        <tbody>
           
            <tr>
                <th>Titre</th>
                <td>{{ recette.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recette.description }}</td>
            </tr>
            <tr>
                <th>DatePublication</th>
                <td>{{ recette.datePublication ? recette.datePublication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>TempsDePreparation</th>
                <td>{{ recette.tempsDePreparation ? recette.tempsDePreparation|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TempsDeCuison</th>
                <td>{{ recette.tempsDeCuison ? recette.tempsDeCuison|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Difficulte</th>
                <td>{{ recette.difficulte }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ recette.image }}</td>
            </tr>
            <tr>
                <th>NombrePortions</th>
                <td>{{ recette.nombrePortions }}</td>
            </tr>
            <tr>
                <th>Saison</th>
                <td>{{ recette.saison.value }}</td>
            </tr>
            {# <tr>
                <th>typeDePlat</th>
                <td>{{ recette.typeDePlat.value }}</td>
            </tr> #}

            <tr>
                <th>cree par :</th>
                <td>{{ recette.utilisateur.nom}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recette_index') }}">back to list</a>

    <a href="{{ path('app_recette_edit', {'id': recette.id}) }}">edit</a>

    {{ include('recette/_delete_form.html.twig') }}
{% endblock %}
